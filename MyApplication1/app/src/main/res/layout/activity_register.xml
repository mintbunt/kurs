<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity">

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="595dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/rname"
                android:layout_width="251dp"
                android:layout_height="51dp"
                android:layout_marginStart="51dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="63dp"
                android:ems="10"
                android:hint="Логин*"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.442"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/rpassw"
                android:layout_width="251dp"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Пароль*"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.452"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rname" />

            <EditText
                android:id="@+id/rpassw2"
                android:layout_width="251dp"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Повторите пароль*"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.452"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rpassw" />

            <EditText
                android:id="@+id/email"
                android:layout_width="258dp"
                android:layout_height="53dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Почта*"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/patr" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="258dp"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Телефон*"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/Date"
                android:layout_width="258dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Дата рождения*"
                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.457"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="248dp"
                android:layout_height="49dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Имя*"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rpassw2" />

            <EditText
                android:id="@+id/surname"
                android:layout_width="252dp"
                android:layout_height="51dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Фамилия*"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.448"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Name" />

            <EditText
                android:id="@+id/patr"
                android:layout_width="257dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Отчество"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surname" />

            <Button
                android:id="@+id/doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="116dp"
                android:text="Доктор"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Date" />

            <Button
                android:id="@+id/pac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="116dp"
                android:text="Пациент"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.468"
                app:layout_constraintStart_toEndOf="@+id/doc"
                app:layout_constraintTop_toBottomOf="@+id/Date" />

            <Spinner
                android:id="@+id/gender2"
                android:layout_width="284dp"
                android:layout_height="51dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-light"
                android:hint="Gender"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/doc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Date"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>